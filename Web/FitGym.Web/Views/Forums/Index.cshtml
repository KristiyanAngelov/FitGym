@model FitGym.Web.ViewModels.Forum.IndexViewModel;
@{
    this.ViewData["Title"] = "Forum";
}
<div class="text-center">
    <h1 class="display-3">@this.ViewData["Title"]</h1>
</div>
<div class="row">
    @foreach (var category in Model.Categories)
    {
        <div class="col-md-6 media">
            <img src="@category.ImageUrl" width="200" class="img-fluid" alt="@category.Title">&nbsp;
            <div class="media-body">
                <h5 class="mt-0">
                    <a asp-controller="Posts" asp-action="AllPostsInCategory" asp-route-id="@category.Id" class="btn-link">@category.Title</a>
                </h5>
                <div>
                    @category.Description
                </div>
                <br />
            </div>
        </div>

    }
</div>
                                                                     