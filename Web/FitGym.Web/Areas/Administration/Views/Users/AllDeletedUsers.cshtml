@model FitGym.Web.ViewModels.Users.AllUsersViewModel

<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Id</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">#</th>
        </tr>
    </thead>
    @foreach (var user in Model.Users)
    {
        <tbody>
            <tr>
                <td> <img src="@user.ProfilePictureUrl" width="200" class="mr-3" alt="@user.UserName"></td>
                <td>@user.Id</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>
                <a class="btn btn-success m-1" href="/Administration/Users/UndeleteUser?userId=@user.Id">Undelete</a>
                <a class="btn btn-danger m-1" href="/Administration/Users/HardDeleteUser?userId=@user.Id">Hard Delete</a>
                </td>
            </tr>
        </tbody>
    }
</table>