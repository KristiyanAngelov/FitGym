@model FitGym.Web.ViewModels.Forum.IndexViewModel;
@{
    this.ViewData["Title"] = "Forum";
}
<h1>@this.ViewData["Title"]</h1>

<p>This is the gyms forum page.</p>
<div class="text-center">
    <h1 class="display-3">@this.ViewData["Title"]</h1>
    <cache expires-after="TimeSpan.FromDays(10)" vary-by-query="id">
        <h1 class="display-3">@DateTime.Now</h1>
    </cache>

</div>
@foreach (var category in Model.Categories)
{
<div class="col-md-6 media">
    <img src="@category.ImageUrl" width="200" class="mr-3" alt="@category.Title">
    <div class="media-body">
        <h5 class="mt-0">
            <a href="@category.Url">
                @category.Title
            </a>
        </h5>

        <a asp-controller="Posts" asp-action="AllPostsInCategory" asp-route-id="@category.Id" class="btn">@category.Name</a>
        <div>
            @category.Description
        </div>
    </div>
</div>

}
