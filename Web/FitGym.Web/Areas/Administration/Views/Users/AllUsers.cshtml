@model FitGym.Web.ViewModels.Users.AllUsersViewModel

@using FitGym.Common
@using Microsoft.AspNetCore.Identity
@using FitGym.Data.Models
@using FitGym.Services.Data.Interfaces

@inject UserManager<ApplicationUser> UserManager

<h1 class="text-center">All Users</h1>

<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Id</th>
            <th scope="col">IsDeleted</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Roles</th>
            <th scope="col">#</th>
        </tr>
    </thead>
    @foreach (var user in Model.Users)
    {
        ApplicationUser currentUser = await this.UserManager.FindByIdAsync(user.Id);
        IList<string> currentUserRoles = await this.UserManager.GetRolesAsync(currentUser);

        <tbody>
            <tr>
                <td> <img src="@user.ProfilePictureUrl" width="200" class="mr-3" alt="@user.UserName"></td>
                <td>@user.Id</td>
                <td>@user.IsDeleted</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@foreach (var role in currentUserRoles)
                    {
                        <a>@role</a>
                    }
                </td>
                <td>
                    @if (currentUserRoles.Contains(GlobalConstants.AdministratorRoleName))
                    {
                        <a class="text-white btn btn-primary m-1" href="/Administration/Roles/Remove?userId=@user.Id&roleName=@GlobalConstants.AdministratorRoleName">
                            Remove Admin
                        </a>
                    }
                    else
                    {
                        <a class="text-white btn btn-primary m-1"
                           href="/Administration/Roles/AddToRole?userId=@user.Id&roleName=@GlobalConstants.AdministratorRoleName">
                            Make Admin
                        </a>
                    }
                    @if (currentUserRoles.Contains(GlobalConstants.TrainerRoleName))
                    {
                    <a class="text-white btn btn-primary m-2" href="/Administration/Roles/Remove?userId=@user.Id&roleName=@GlobalConstants.TrainerRoleName">
                        Remove Trainer
                    </a>
                    }
                    else
                    {
                    <a class="text-white btn btn-primary m-2" href="/Administration/Roles/AddToRole?userId=@user.Id&roleName=@GlobalConstants.TrainerRoleName">
                        Make Trainer
                    </a>
                    }
                    <a href="#" class="btn btn-danger m-1">Edit</a>
                    <a class="btn btn-danger m-1" href="/Administration/Users/DeleteUser?userId=@user.Id">Soft Delete</a>
                </td>
            </tr>
        </tbody>
    }
</table>
