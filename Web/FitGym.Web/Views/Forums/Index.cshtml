@model FitGym.Web.ViewModels.Forum.IndexViewModel;
@{
    this.ViewData["Title"] = "Forum";
}
<div class="text-center">
    <h1 class="display-3">@this.ViewData["Title"]</h1>
</div>
@foreach (var category in Model.Categories)
{
    <div class="text-center">
        <h1>
            <a asp-controller="Posts" asp-action="AllPostsInCategory" asp-route-id="@category.Id" class="btn-link text-center">@category.Title</a>
        </h1>
    </div>
    <div class="row mb-3">
        <div class="col-lg-3">
            <img class="img-fluid rounded mb-4" src="@category.ImageUrl" alt="@category.Title">
        </div>
        <div class="col-lg-9">
            <div>
                @category.Description
            </div>
        </div>
    </div>
}
